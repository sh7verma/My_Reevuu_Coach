<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGreyDark">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:foreground="?selectableItemBackground"
            android:padding="@dimen/_15sdp"
            android:src="@mipmap/ic_back_white" />

        <com.myreevuuCoach.customViews.BoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/settings"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.myreevuuCoach.customViews.RegularTextView
                android:id="@+id/txtChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableRight="@mipmap/ic_right_arrow"
                android:foreground="?selectableItemBackground"
                android:padding="@dimen/_10sdp"
                android:text="@string/change_password"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1ssp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/colorGreyDark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp">

                <com.myreevuuCoach.customViews.RegularTextView
                    android:id="@+id/txtChangeEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:foreground="?selectableItemBackground"
                    android:text="@string/change_email"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

                <com.myreevuuCoach.customViews.RegularTextView
                    android:id="@+id/txtverification"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:text="@string/verification_pending"
                    android:textColor="@color/colorRed"
                    android:textSize="@dimen/_8ssp" />

                <com.myreevuuCoach.customViews.RegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableRight="@mipmap/ic_right_arrow"
                    android:foreground="?selectableItemBackground"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorRed"
                    android:textSize="@dimen/_8ssp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1ssp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/colorGreyDark" />

            <com.myreevuuCoach.customViews.RegularTextView
                android:id="@+id/txtNotificationPreferences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_right_arrow"
                android:foreground="?selectableItemBackground"
                android:padding="@dimen/_10sdp"
                android:text="@string/notification_preferences"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1ssp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/colorGreyDark" />

            <com.myreevuuCoach.customViews.RegularTextView
                android:id="@+id/txtTerms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_right_arrow"
                android:foreground="?selectableItemBackground"
                android:padding="@dimen/_10sdp"
                android:text="@string/terms_amp_conditions"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1ssp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/colorGreyDark" />

            <com.myreevuuCoach.customViews.RegularTextView
                android:id="@+id/txtPrivacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_right_arrow"
                android:foreground="?selectableItemBackground"
                android:padding="@dimen/_10sdp"
                android:text="@string/privacy_policy"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1ssp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/colorGreyDark" />

            <com.myreevuuCoach.customViews.RegularTextView
                android:id="@+id/txtFaq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_right_arrow"
                android:foreground="?selectableItemBackground"
                android:padding="@dimen/_10sdp"
                android:text="@string/faqs"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1ssp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/colorGreyDark" />


            <com.myreevuuCoach.customViews.RegularTextView
                android:id="@+id/txtAboutUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_right_arrow"
                android:foreground="?selectableItemBackground"
                android:padding="@dimen/_10sdp"
                android:text="@string/about_us"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1ssp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/colorGreyDark" />

            <com.myreevuuCoach.customViews.RegularTextView
                android:id="@+id/txtRateUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_right_arrow"
                android:foreground="?selectableItemBackground"
                android:padding="@dimen/_10sdp"
                android:text="@string/rate_us"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1ssp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/colorGreyDark" />

            <FrameLayout
                android:id="@+id/flContactUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.myreevuuCoach.customViews.RegularTextView
                    android:id="@+id/txtContactUs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/ic_right_arrow"
                    android:foreground="?selectableItemBackground"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/contact_us"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />


                <com.myreevuuCoach.customViews.RegularTextView
                    android:id="@+id/txtUnreadBatchCount"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@drawable/red_circle"
                    android:gravity="center"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="bold"
                    android:visibility="gone" />


            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1ssp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/colorGreyDark" />

            <com.myreevuuCoach.customViews.RegularTextView
                android:id="@+id/txtEmailUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_right_arrow"
                android:foreground="?selectableItemBackground"
                android:padding="@dimen/_10sdp"
                android:text="@string/email_us"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1ssp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/colorGreyDark" />

            <com.myreevuuCoach.customViews.RegularTextView
                android:id="@+id/txtInviteReferal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_right_arrow"
                android:foreground="?selectableItemBackground"
                android:padding="@dimen/_10sdp"
                android:text="@string/invite_friends"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1ssp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/colorGreyDark" />

            <com.myreevuuCoach.customViews.RegularTextView
                android:id="@+id/txtLogOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:drawableRight="@mipmap/ic_right_arrow"
                android:foreground="?selectableItemBackground"
                android:padding="@dimen/_10sdp"
                android:text="@string/logout"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>